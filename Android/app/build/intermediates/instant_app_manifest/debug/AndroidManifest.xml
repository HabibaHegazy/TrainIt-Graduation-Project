        <activity android:name="com.example.ipingpong.views.PlayerProfile.PlayerActivity" />
        <activity android:name="com.example.ipingpong.views.CoachProfile.CoachActivity" />
        <activity android:name="com.example.ipingpong.views.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.miu.Graduationar.UnityPlayerActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale|layoutDirection|density"
